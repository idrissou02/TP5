{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Liste des contacts</h1>

<div class="row">
    {% for leContact in lesContacts %}
            <div class="card mb-3">
                <h3 class="card-header"> {{leContact.nom }} {{lecontact.prenom}} <font style="vertical-align: inherit;"><font style="vertical-align: inherit;">En-tête de carte</font></font></h3>
                <svg xmlns="http://www.w3.org/2000/svg" src="{{ leContact.avatar }} "  class="d-block user-select-none" width="100%" height="200" aria-label="Espace réservé&nbsp;:&nbsp;Capuchon de l'image" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                </svg>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{ leContac.rue }}<font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cras juste odio</font></font></li>
                    <li class="list-group-item">{{ leContact.cp }}<font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Dapibus ac facilisis à</font></font></li>
                    <li class="list-group-item">{{ leContact.ville }}<font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Vestibule à Eros</font></font></li>
                    <li class="list-group-item">{{ leContact.mail }}<font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Vestibule à Eros</font></font></li>
                    <li class="list-group-item">
                    {% if leContact.sexe==0 %}
                        <span class="badge badge-info">homme</span>
                    {% endif %}
                        <span class="badge badge-info">femme</span>
                </li>
                </ul>
                <div class="card-body">
                    <a href="#" class="card-link"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Lien de la carte </font></font></a>
                    <a href="#" class="card-link"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Un autre lien</font></font></a>
                </div>
            </div>
    {% endfor %}
</div>
{% endblock %}
